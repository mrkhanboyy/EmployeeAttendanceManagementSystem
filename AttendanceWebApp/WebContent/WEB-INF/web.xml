<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>AttendanceWebApp</display-name>
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.htm</welcome-file>
		<welcome-file>default.jsp</welcome-file>
	</welcome-file-list>

	<!-- Employee & Admin Login -->

	<servlet>
		<servlet-name>Login</servlet-name>
		<servlet-class>org.devshub.servlet.Login</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Login</servlet-name>
		<url-pattern>/login</url-pattern>
	</servlet-mapping>

	<!-- Employee & Admin Logout -->

	<servlet>
		<servlet-name>Logout</servlet-name>
		<servlet-class>org.devshub.servlet.Logout</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Logout</servlet-name>
		<url-pattern>/logout</url-pattern>
	</servlet-mapping>

	<!-- Employee Change Password -->

	<servlet>
		<servlet-name>Change Password</servlet-name>
		<servlet-class>org.devshub.servlet.ChangePassword</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Change Password</servlet-name>
		<url-pattern>/changePassword</url-pattern>
	</servlet-mapping>

	<!-- Employee Forget Password -->

	<servlet>
		<servlet-name>Forget Password</servlet-name>
		<servlet-class>org.devshub.servlet.ForgetPassword</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Forget Password</servlet-name>
		<url-pattern>/forgetPassword</url-pattern>
	</servlet-mapping>

	<!-- Add Employee -->

	<servlet>
		<servlet-name>Add Employee</servlet-name>
		<servlet-class>org.devshub.servlet.AddEmployee</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Add Employee</servlet-name>
		<url-pattern>/addEmployee</url-pattern>
	</servlet-mapping>

	<!-- Search Employees -->

	<servlet>
		<servlet-name>Search Employee</servlet-name>
		<servlet-class>org.devshub.servlet.SearchEmployee</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Search Employee</servlet-name>
		<url-pattern>/searchEmployee</url-pattern>
	</servlet-mapping>

	<!-- View Employees -->

	<servlet>
		<servlet-name>View Employees</servlet-name>
		<servlet-class>org.devshub.servlet.ViewEmployees</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>View Employees</servlet-name>
		<url-pattern>/viewEmployees</url-pattern>
	</servlet-mapping>

	<!-- Edit Employee -->

	<servlet>
		<servlet-name>Edit Employee</servlet-name>
		<servlet-class>org.devshub.servlet.EditEmployee</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Edit Employee</servlet-name>
		<url-pattern>/editEmployee</url-pattern>
	</servlet-mapping>


	<!-- Update Employee -->

	<servlet>
		<servlet-name>Update Employee</servlet-name>
		<servlet-class>org.devshub.servlet.UpdateEmployee</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Update Employee</servlet-name>
		<url-pattern>/updateEmployee</url-pattern>
	</servlet-mapping>

	<!-- Delete Employee -->

	<servlet>
		<servlet-name>Delete Employee</servlet-name>
		<servlet-class>org.devshub.servlet.DeleteEmployee</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>Delete Employee</servlet-name>
		<url-pattern>/deleteEmployee</url-pattern>
	</servlet-mapping>

	<!-- View History -->

	<servlet>
		<servlet-name>View Employee History</servlet-name>
		<servlet-class>org.devshub.servlet.ViewEmployeeHistory</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>View Employee History</servlet-name>
		<url-pattern>/viewHistory</url-pattern>
	</servlet-mapping>

	<!-- entry -->

	<servlet>
		<servlet-name>doEntry</servlet-name>
		<servlet-class>org.devshub.servlet.EntryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>doEntry</servlet-name>
		<url-pattern>/entryservlet</url-pattern>
	</servlet-mapping>

	<!-- exit -->

	<servlet>
		<servlet-name>doExit</servlet-name>
		<servlet-class>org.devshub.servlet.ExitServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>doExit</servlet-name>
		<url-pattern>/exitservlet</url-pattern>
	</servlet-mapping>

	<!-- user profile -->

	<servlet>
		<servlet-name>profile</servlet-name>
		<servlet-class>org.devshub.servlet.ViewProfileServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>profile</servlet-name>
		<url-pattern>/viewProfile</url-pattern>
	</servlet-mapping>

	<!-- history -->

	<servlet>
		<servlet-name>history</servlet-name>
		<servlet-class>org.devshub.servlet.AttandenceHistoryServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>history</servlet-name>
		<url-pattern>/history</url-pattern>
	</servlet-mapping>



</web-app>